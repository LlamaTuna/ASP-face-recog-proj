/* light themed styling for face finder application */
QMainWindow {
    background-color: qlineargradient(x1:0, y1:0.5, x2:0, y2:1, stop:0 #dfeaeb, stop:1 #288cbc);
    color: #000000;
    min-height: 650px;
    border: 3px solid #14386a;
}

/* styling for vertical screen splitter handle */
QSplitter::handle {
    background: 3px #14386a;
    border-radius: 2px;
}

QLabel {
    background-color: 'transparent';
}

/* styling for scrollbars */
QScrollBar {
    background-color: #d3d3d3;
}

/* styling for menu */
QMenuBar {
    background-color: #14386a;
    color: #FFFFFF;
    font: bold 14px;
}

QMenuBar::item:selected {
    background: #024fa7;
}

QMenuBar::item:pressed {
    background: #024fa7;
}

/* styling for results table */
QTableWidget {
    background-color: #f3f3f3;
    color: #000000;
    border: 1px solid #5A5A5A;
    border-radius: 5px;
    padding: 3px;
    margin: 8px;
}

QTableView::item:selected {
    background-color: black;
    color: white;
}

/* styling for column and row titles in results table */
QHeaderView::section {
    background-color: #415989;
    color: #FFFFFF;
    border: 1px solid #5A5A5A;
    font: bold 12px;

}

/* styling for file path boxes */
QLineEdit{
    background-color: #f3f3f3;
    color: #000000;
    border: 1px solid #5A5A5A;
    border-radius: 5px;
    min-width: 4em;
    padding: 2px;
}

/* styling for console log box */
QTextEdit {
    background-color: #f3f3f3;
    border: 1px solid #5A5A5A;
    border-radius: 5px;
}

/* styling for buttons */
QPushButton {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #024fa7, stop:1 #415989);
    border-color: #14386a;
    color: white;
    border-style: inset;
    border-width: 2px;
    border-radius: 10px;
    font: bold 14px;
    padding-left: 5px;
    padding-right: 5px;
    icon-size: 1em;
}

QPushButton#left_arrow_button {
max-width: 40px;
}

QPushButton#right_arrow_button {
max-width: 40px;
}

QPushButton::hover {
background-color: #14386a;
border-color: #14386a;
border-style: outset;
}

QPushButton::pressed {
    background-color: #288cbc;
    border-style: inset;
}

/* styling for preview image box */
QLabel#image_preview_label {
    background-color: #f3f3f3;
    qproperty-alignment: AlignCenter;
    border: 1px solid #14386a;
    border-radius: 5px;
    min-height: 112px;
}

/* styling for matched face image box */
QLabel#matched_face_label {
    background-color: #f3f3f3;
    qproperty-alignment: AlignCenter;
    border: 1px solid #14386a;
    border-radius: 5px;
    min-height: 112px;
}

/* styling for text under preview image box */
QLabel#similarity_original_image_label {
    qproperty-alignment: AlignCenter;
}

/* styling for progress bar */
QProgressBar {
    text-align: center;
    border: 1px solid #14386a;
    background-color: #f3f3f3;
}